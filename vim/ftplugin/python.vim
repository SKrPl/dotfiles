let python_highlight_all=1

" Sets column width of a tab
setlocal tabstop=4

" Tabs are converted to spaces
setlocal expandtab

" Size of indentation when using reindent operations (<< or >>)
setlocal shiftwidth=4

" Same as tabstop if both the values are same
setlocal softtabstop=4

" Maximum number of characters in a line
setlocal textwidth=79

